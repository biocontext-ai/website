{
  "extends": [
    "next/core-web-vitals",
    "next/typescript"
  ],
  "overrides": [
    {
      "files": ["*.mdx"],
      "extends": ["plugin:mdx/recommended"],
      "parser": "eslint-mdx"
    },
    {
      "files": ["*.mdx"],
      "rules": {
